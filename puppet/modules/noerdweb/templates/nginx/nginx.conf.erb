worker_processes <%= @processorcount %>;
user vagrant vagrant;

events {
  worker_connections  1024;
}

http {
    include       conf.d/mime.types;
    default_type  application/octet-stream;

    sendfile off;
    tcp_nopush on;
    tcp_nodelay on;
    keepalive_timeout 65;
    types_hash_max_size 2048;

    charset utf-8;

    client_max_body_size 512m;

    server_tokens on;

    ssl_certificate ssl/local.noerdisch.net/cert.pem;
    ssl_certificate_key ssl/local.noerdisch.net/cert.key;

    ssl_session_timeout 5m;
    ssl_session_cache shared:SSL:10m;
    ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
    ssl_ciphers "AES128+EECDH:AES128+EDH";
    ssl_session_tickets off;
    ssl_stapling off;
    ssl_stapling_verify off;
    ssl_prefer_server_ciphers on;
    ssl_dhparam ssl/dhparams.pem;

    gzip on;
    gzip_disable "msie6";
    gzip_proxied any;
    gzip_comp_level 9;
    gzip_vary on;
    gzip_buffers 16 8k;
    gzip_min_length 50;

    gzip_types
        text/css
        text/plain
        text/javascript
        application/javascript
        application/json
        application/x-javascript
        application/xml
        application/xml+rss
        application/xhtml+xml
        application/x-font-ttf
        application/x-font-opentype
        application/vnd.ms-fontobject
        image/svg+xml
        image/x-icon
        application/rss+xml
        application/atom_xml;

    map $http_host $engine {
        hostnames;

        default  php70_fpm;

        php56.*  php56_fpm;
        php70.*  php70_fpm;
        php71.*  php71_fpm;
    }

    include conf.d/upstreams.conf;

    include sites.d/*.conf;

    include sites/wildcard.conf;
    include sites/wildcard-sf2.conf;
}
